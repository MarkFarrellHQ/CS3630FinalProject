extends ../layout

block content
                    
    h1(class='register-header')= 'Login to List Creator to manage your lists!'

    div(class='register-container')
        div(class='row')
            div(class='col-md-2')
            div(class='col-md-8')
                form
                    input(type='text' class='form-control custom-input' placeholder='Username' data-bind='textInput: username')
                    input(type='password' class='form-control custom-input' placeholder='Password' data-bind='textInput: password')
            div(class='col-md-2')
        div(class='row')
            div(class='col-md-4')
            div(class='col-md-4')
                button(type='button' class='btn btn-custom' data-bind='click: login')= "Login!"
            div(class='col-md-4')
    
        

block scripts
    script(src='/javascripts/login.js')